<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="630.0" prefWidth="1250.0" spacing="32.0" stylesheets="@../../CssFiles/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quiz_geek.controllers.student.TakeAssessmentController">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="150.0" prefWidth="1440.0" stylesheets="@../../CssFiles/style.css" VBox.vgrow="ALWAYS">
         <children>
            <HBox fx:id="titleContainer" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" />
            <HBox fx:id="timerContainer" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" />
         </children>
         <styleClass>
            <String fx:value="section-card" />
            <String fx:value="section-card-titleContainer" />
            <String fx:value="section-card-secondaryColor" />
         </styleClass>
      </HBox>
      <HBox spacing="32.0">
         <children>
            <VBox fx:id="mainQuestionContainer" maxWidth="1.7976931348623157E308" prefHeight="520.0" prefWidth="1000.0" HBox.hgrow="ALWAYS" />
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="520.0" prefWidth="350.0">
               <content>
                  <TilePane fx:id="questionNumberContainer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefColumns="4" prefHeight="520.0" prefRows="4" prefWidth="350.0" stylesheets="@../../CssFiles/style.css">
                     <padding>
                        <Insets bottom="32.0" left="32.0" right="32.0" top="64.0" />
                     </padding>
                     <styleClass>
                        <String fx:value="section-card" />
                        <String fx:value="section-card-secondaryColor" />
                     </styleClass>
                  </TilePane>
               </content>
            </ScrollPane>
         </children>
      </HBox>
      <HBox>
         <children>
            <HBox HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="previousButton" mnemonicParsing="false" onAction="#previousQuestion" text="previous" />
               </children>
            </HBox>
            <HBox fx:id="totalQuestionNumberContainer" alignment="CENTER" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="finishButton" mnemonicParsing="false" text="Finish" onAction="#finishAssessment" />
                  <Button fx:id="nextButton" layoutX="368.0" layoutY="10.0" mnemonicParsing="false" onAction="#nextQuestion" text="Next" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</VBox>
