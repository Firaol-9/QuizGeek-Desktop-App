<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="rootScroll" fitToWidth="true" hbarPolicy="NEVER" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quiz_geek.controllers.student.MyResultController">
    <content>
        <VBox fillWidth="true" spacing="20.0" styleClass="createNewQuizContainer" stylesheets="@../../CssFiles/style.css">
            <children>
                <!-- Title -->
                <Label alignment="CENTER" stylesheets="@../../CssFiles/style.css" text="Your Results">
                    <VBox.margin>
                        <Insets bottom="10" top="20" />
                    </VBox.margin>
               <styleClass>
                  <String fx:value="label-secondaryColor" />
                  <String fx:value="label-extraExtraLarge" />
                  <String fx:value="label-bold" />
               </styleClass>
                </Label>
                
                <!-- Results Table Card -->
                <VBox fx:id="tableCard" spacing="10.0" styleClass="section-card-dashboard" stylesheets="@../../CssFiles/style.css">
                    <children>
                        <TableView fx:id="resultsTable" prefHeight="800.0">
                            <columns>
                                <TableColumn fx:id="colSubject" prefWidth="120" text="Subject Name" />
                                <TableColumn fx:id="colTitle" prefWidth="150" text="Title" />
                                <TableColumn fx:id="colDifficulty" prefWidth="100" text="Difficulty" />
                                <TableColumn fx:id="colTotalQuestions" prefWidth="120" text="Total Questions" />
                                <TableColumn fx:id="colCorrectQuestions" prefWidth="130" text="Correct Questions" />
                                <TableColumn fx:id="colResult" prefWidth="150" text="Result" />
                                <TableColumn fx:id="colAction" prefWidth="100" text="Action" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
